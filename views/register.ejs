				<label class="nbsp4"></label> <input type="submit" value="注册">
			</form>
		</div>
	</div>
	<script>
		function dosubmit(event) {
			if (pswd.value != pswd2.value) {
				alert('两次密码输入不一样');
				pswd2.select();
				pswd2.focus();
				event.preventDefault();
			}
		}
	</script>
