	<div class="main">
		<div class="center" style="width:300px">
			<form id='tt' method="get" action="/user/do/register.html" onsubmit="dosubmit(event);">
				<label>用户名：</label> <input name="name" type="text"> <p>
				<label>密码：&nbsp;&nbsp;</label> <input name="password" type="password" id='pswd'> <p>
				<label class="nbsp4"></label> <input type="password" id='pswd2'> <p>
